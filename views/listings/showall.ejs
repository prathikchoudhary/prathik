<% layout("./layout/layouts.ejs") %>
<script>
    const map_token = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listeng) %>;
</script>
<body>
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3">
            <h3><%= listeng.title %></h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card" >
            <img src="<%= listeng.image.url %>" class="card-img-top" alt="listing-image">
            <div class="card-body">
              <p class="card-text">
                <p class="card-text"><b><%= listeng.owner.username %></b></p>
                <br>
                <p class="card-text"><%= listeng.description %></p> <br>
                <p class="card-text">â‚¹ <%= listeng.price.toLocaleString("en-IN") %></p> <br>
                <p class="card-text"><%= listeng.location %></p> <br>
                <p class="card-text"><%= listeng.country %></p>
            </p>
            </div>
          </div>
          <% if(currUser && listeng.owner._id.equals(currUser._id)) { %>
                <div class="btns col-7 offset-3">
                    <form method="get" action="/listing/<%= listeng._id %>/edit">
                        <button class="btn btn-dark">Edit</button>
                    </form>
                    <form method="post" action="/listing/<%= listeng._id %>?_method=DELETE">
                        <button class="btn btn-dark offset-2 red button">Delete</button>
                    </form>
                </div>
         <% } %>
                
        
        <div class="col-8 offset-3">
             <% if(currUser){ %>
                <hr>
            <h4>Leave a Review</h4>
            <form action="/listing/<%= listeng.id %>/reviews" method="post" novalidate class="needs-validation">
                <!-- <div class="mb-3 mt-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
                </div> -->
                <div class="mb-3 mt-3">
                    <label class="form-label" for="rating">Rating</label>   
                    <fieldset class="starability-coinFlip">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                </div>
                
                <div class="mb-3 mt-3">
                    <label class="form-label" for="comment">Comments</label>
                    <textarea name="review[Comment]" id="comment" cols="30" required rows="5" class="form-control"></textarea>
                    <div class="invalid-feedback">
                        Please Enter Valid Comment.
                      </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
                <hr>
            </form>
            <% } %>
            <div class="row">
                <% for(review of listeng.reviews){ %>
                    <p><b>All Reviews</b></p>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fa-solid fa-circle-user"></i> <%= review.author.username%></h5>
                            <p class="card-text"><%= review.Comment %></p>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %>
                              </p>
                            <form action="/listing/<%= listeng._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="col-8 offset-3">
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>
    </div>
    <script src="/js/map.js"></script>
</body>



